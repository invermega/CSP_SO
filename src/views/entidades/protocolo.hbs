<div class="container-fluid px-4">
    <h1 class="mt-4 tituloverde">Entidades</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item active">Protocolo</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
            <div class="left-content">
                <i class="fas fa-table me-1"></i>
                Configuración de protocolos
            </div>
        </div>
        <div class="card-body body1">
            <ul class="nav nav-tabs mb-3" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="ex1-tab-1" data-bs-toggle="tab" href="#ex1-tabs-1" role="tab"
                        aria-controls="ex1-tabs-1" aria-selected="true">Datos</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="ex1-tab-2" data-bs-toggle="tab" href="#ex1-tabs-2" role="tab"
                        aria-controls="ex1-tabs-2" aria-selected="false">Exámenes</a>
                </li>
            </ul>

            <div class="tab-content" id="ex1-content">
                <div class="tab-pane fade show active" id="ex1-tabs-1" role="tabpanel" aria-labelledby="ex1-tab-1">
                    <div class="row mt-2">
                        <div class="col-md-12 form-inline col-sm-12 form-group mb-1 mt-1">
                            <div class="input-group input-group-sm" style="width: 100%;">
                                <label class="control-label input-group-text" for="codempresa">Empresa</label>
                                <input type="text" oninput="limitarCaracteresNumericos(this, 9);" id="codempresa"
                                    class="form-control form-control-sm" placeholder="Código de la empresa"
                                    aria-label="Username" disabled>
                                <button type="button" data-toggle="modal" data-target="#modalFormEmpresa"
                                    class="btn input-group-text" id="empresa">
                                    <i class="fa-solid fa-building mr-1"></i>
                                </button>
                                <input type="text" style="width: 30%;" id="nomempresa"
                                    class="form-control form-control-sm" placeholder="Nombre de la empresa"
                                    aria-label="Server" disabled>
                                <button type="button" class="btn input-group-text" id="nomempresa">
                                    <i class="fa-solid fa-pen"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!--MODAL EMPLEADO-->
                    <div class="modal fade" id="modalFormEmpresa" role="dialog">
                        <div class="modal-dialog ">
                            <div class="modal-content">
                                <div class="modal-header"
                                    style="background-color: #0FA0A7;color: white;border-color: #0FA0A7;">
                                    <h4 class="modal-title" id="myModalLabel">BUSQUEDA DE LAS EMPRESA</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="input-group input-group-sm" style="width: 100%;">
                                        <label class="control-label input-group-text" for="empresas">EMPRESA</label>
                                        <input class="form-control form-control-sm " id="empleadomodal"
                                            placeholder="Ingrese el nombre del empleado" required></input>
                                        <label class="input-group-text form-control-sm"><i class="fa-solid fa-building mr-1"></i></label>
                                    </div>
                                    <div class="row mb-2 mt-2">
                                        <div class="table-responsive">
                                            <table
                                                class="records_list table table-sm table-hover letra animate__animated animate__fadeInDown"
                                                id="tableempleadomodal" style="display: none;">
                                                <thead class="thead">
                                                    <tr>
                                                        <th scope="col">ACCIÓN</th>
                                                        <th scope="col">DNI</th>
                                                        <th scope="col">EMPLEADO</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="bodyempleadomodal">
                                                </tbody>
                                            </table>

                                        </div>
                                        <div class="text-center" id="cargaempleadomodal" style="display: none;">
                                            <div class="d-flex justify-content-center align-items-center"
                                                style="min-height: 5vh;">
                                                <lottie-player src="/img/jsonimg/Cargahealth.json"
                                                    background="transparent" speed="1"
                                                    style="width: 200px; height: 200px;" loop autoplay></lottie-player>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn"
                                            style="background-color: #793B8E;color: white;border-color: #793B8E;"
                                            id="cerrarempleado" data-dismiss="modal"> <i
                                                class="fa-solid fa-circle-xmark"></i>
                                            Cerrar</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row mt-2">
                        <div class="col-md-12">
                            <label for="tipodoc" class="labels mr-5">
                                Estado</label>
                            <label class="form-check-label mr-4" for="inlineCheckbox1">Vigente</label>
                            <input class="form-check-input" type="radio" id="vigente" name="vigente" value="V" required>
                            <label class="form-check-label mr-4" for="inlineCheckbox1">Histórico</label>
                            <input class="form-check-input" type="radio" id="historico" name="historico" value="H"
                                required>
                            <label class="form-check-label mr-4" for="cotizacion">Cotización</label>
                            <input class="form-check-input" type="radio" id="cotizacion" name="cotizacion" value="C"
                                required>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12"><label class="labels" for="tipo">Tipo</label>
                            <select class="form-select form-control form-control-sm" id="tipo"
                                aria-label="Default select example" required>
                            </select>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12"><label class="labels" for="nombre">Nombre
                            </label><input type="text" class="form-control form-control-sm" value="" id="nombre"
                                placeholder="Ingrese el nombre" required>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12"><label class="labels" for="comentario">Comentarios
                            </label><textarea type="text" class="form-control form-control-sm" value="" id="comentario"
                                placeholder="Ingrese algún comentario" required></textarea>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels" for="cadcer">Tiempo de caducidad de
                                certificado de aptitud</label>
                            <select class="form-select form-control form-control-sm" id="cadcer"
                                aria-label="Default select example" required>
                            </select>
                        </div>
                        <div class="col-md-6"><label class="labels" for="fecvcto">Fecha de vencimiento</label>
                            <input type="date" class="form-control btn-sm" id="fecvcto" min="1900-01-01"
                                max="2100-12-31" step="1" required>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="ex1-tabs-2" role="tabpanel" aria-labelledby="ex1-tab-2">
                    <div class="table-responsive scrollable-modal" id="tablaaccesos">
                        <table class="records_list table table-sm table-striped table-bordered table-hover letra"
                            id="mydatatable">
                            <thead class="thead sticky-top">
                                <tr>
                                    <th class="col" scope="col">ID</th>
                                    <th scope="col">NOMBRE DEL ROL</th>
                                    <th scope="col">ACCIONES</th>
                                </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>
                    </div>
                    <div class="text-center" id="cargaacc" style="display: none;">
                        <div class="d-flex justify-content-center align-items-center" style="min-height: 5vh;">
                            <lottie-player src="https://assets9.lottiefiles.com/packages/lf20_ginda0jy.json"
                                background="transparent" speed="1" style="width: 300px; height: 300px;" loop
                                autoplay></lottie-player>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="/js/entidades/protocolo.js"> </script>